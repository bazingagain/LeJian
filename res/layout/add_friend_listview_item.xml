<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="@dimen/common_height"
    android:background="@color/white_smoke"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/add_friend_pic"
         android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_width="100px"
        android:layout_height="@dimen/common_height"
        android:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/add_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="@null" />

    <com.Leon.lejian.view.MyButton
        android:background="@drawable/wechat_button_green"
        android:id="@+id/add_agreeBtn"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:focusable="false"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/agree"></com.Leon.lejian.view.MyButton>

</LinearLayout>
