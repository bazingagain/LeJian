<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.Leon.lejian.view.LineEditText
        android:id="@+id/editText_signature"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:hint="@string/signature"
        android:ems="10" >

    </com.Leon.lejian.view.LineEditText>

    <Button
        android:id="@+id/save_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/editText_signature"
        android:layout_alignRight="@id/editText_signature"
        android:layout_below="@id/editText_signature"
        android:layout_marginTop="20dp"
        android:background="@drawable/wechat_button_green"
        android:text="@string/save" />

</RelativeLayout>
